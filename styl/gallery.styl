.gallery
    width 720px
    margin 0 auto
    &__list
        clearfix()
        list-style none
        padding 0
        margin 0
    &__item
        float left
        width (100% / 4)
        height 120px
        overflow hidden
    &__thumb
        width 100%
    &__link
        display inline-block
        transition opacity .3s
        &:hover
            opacity .7