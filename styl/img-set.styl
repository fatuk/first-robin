.img-set
    clearfix()
    &__main
        width 100%
    &__list
        clearfix()
        list-style none
        padding 0
        margin 0
        margin-top 5px
    &__item
        float left
        margin-right 3%
        margin-bottom 5px
        width (100% / 3 - @margin-right * 2)
        &:nth-child(3n+3)
            margin-right 0
    &__thumb
        width 100%